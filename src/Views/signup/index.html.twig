{% extends "layout.html.twig" %}

{% block content %}
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading text-uppercase">Sign up</div>
            <div class="panel-body">
                <form action="{{ route.register }}" method="post">
                    <div class="form-group">
                        <label>Name<small>*</small></label>
                        <input type="text" name="name" value="{{ signupSession.name }}" required pattern=".{3,}" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>E-mail<small>*</small></label>
                        <input type="email" name="email" value="{{ signupSession.email }}" required class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Country<small>*</small></label>
                        <input type="text" name="country" value="{{ signupSession.country }}" required class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Password<small>*</small></label>
                        <input type="password" name="password" required pattern="((?=.*\d).{6,})" class="form-control">
                        <div class="help-block">
                            <small>minimum of 6 characters and at least 1 digit.</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password<small>*</small></label>
                        <input type="password" name="confirm_password" required pattern="((?=.*\d).{6,})" class="form-control">
                    </div>

                    <div class="help-block">
                        <small>* required</small>
                    </div>

                    <hr>

                    <input type="submit" value="Register" class="btn btn-success">

                    <a href="{{ route.index }}" class="btn btn-link pull-right">Cancel</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}