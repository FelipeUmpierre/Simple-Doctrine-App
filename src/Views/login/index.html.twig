{% extends "layout.html.twig" %}

{% block content %}
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading text-uppercase">Login</div>
            <div class="panel-body">
                <form action="{{ route.auth }}" method="post">
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" name="email" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control">
                    </div>

                    <hr>

                    <input type="submit" value="Access" class="btn btn-success">
                    <a href="{{ route.index }}" class="btn btn-link pull-right">Cancel</a>
                </form>
            </div>
        </div>

        <p class="text-muted pull-right">
            <small>Do not have an account already? <a href="{{ route.signup }}">click here</a> and sign up!</small>
        </p>
    </div>

{% endblock %}